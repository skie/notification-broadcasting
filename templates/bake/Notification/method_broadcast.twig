    /**
     * Get the broadcast representation of the notification
     *
     * @param \Cake\Datasource\EntityInterface|\Cake\Notification\AnonymousNotifiable $notifiable The entity receiving the notification
     * @return \Cake\Notification\Broadcasting\Message\BroadcastMessage
     */
    public function toBroadcast(EntityInterface|AnonymousNotifiable $notifiable): BroadcastMessage
    {
        return new BroadcastMessage([
            'title' => '{{ notificationName }}',
            'message' => 'You have a new notification',
        ]);
    }
